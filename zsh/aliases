# vi: ft=zsh

# Shell Utility Commands ------------------------------------------------------
alias c='clear'
alias home='cd && clear'
alias h='cd && clear'

command -v bat &>/dev/null &&
  alias cat='bat'

if command -v delta >/dev/null 2>&1; then
  alias g='git'
else
  alias g='git --no-pager'
fi

alias n='nvim'

alias lzg='lazygit'
alias lzd='lazydocker'

# Default Flags for Commands --------------------------------------------------
alias grep='grep --color=auto'
alias tree='tree -I ".git"' # ignore .git directory

command -v eza &>/dev/null &&
  alias ls='eza --color=always --icons=always --group-directories-first --git'

alias ll='ls -l'

# Repository/Project Shortcuts ------------------------------------------------
alias peter='cd ${DEVELOPER:-$HOME/Developer}/peter-bread/peter-bread'
