let mapleader = " "

set number
set relativenumber

set autoindent
set smartindent " I may remove this
set expandtab
set shiftwidth=2
set tabstop=2
set smarttab
set shiftround

set nowrap " I think I want this???

set splitbelow
set splitright

" Split below
nnoremap <leader>- <C-w>s

" Split right
nnoremap <leader><Bar> <C-w>v

" Focus left pane
nnoremap <C-h> <C-w>h

" Focus lower pane
nnoremap <C-j> <C-w>j

" Focus upper pane
nnoremap <C-k> <C-w>k

" Focus right pane
nnoremap <C-l> <C-w>l

syntax on

colorscheme habamax
