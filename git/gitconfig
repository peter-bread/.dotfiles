[user]
	name = Peter Sheehan

[init]
	defaultBranch = main

[includeIf "gitdir:~/Developer/ak22112/"]
	path = ~/Developer/ak22112/.gitconfig

[includeIf "gitdir:~/Developer/peter-bread/"]
	path = ~/Developer/peter-bread/.gitconfig

[alias]
  a = add
  aa = add -A
	br = branch
	cm = commit -m
  co = checkout
  cob = checkout -b
  d = diff
  f = fetch
	l = log --oneline --decorate --graph
	last = log -1 HEAD
	pr = remote prune origin
  pl = pull
  plom = pull origin main
  ps = push
  psom = push origin main
	st = status
	unstage = reset HEAD --

[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[core]
	excludesfile = /Users/petersheehan/.config/git/ignore
