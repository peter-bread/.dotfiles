	aa = add -A
	br = branch
	cm = commit -m
	co = checkout
	cob = checkout -b
	d = diff
	f = fetch
	l = log --oneline --decorate --graph
	last = log -1 HEAD
	pr = remote prune origin
	pl = pull
	plom = pull origin main
	ps = push
	psom = push origin main
	st = status
	unstage = reset HEAD --

