[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	plus-style = "syntax #15223a"
	minus-style = "syntax #2d1e1b"
	plus-emph-style = "syntax #234d87"
	minus-emph-style = "syntax #733d22"

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[includeIf "gitdir:~/Developer/ak22112/"]
	path = ~/.dotfiles/git/gitconfig.ak22112

[alias]
	a = add
	aa = add -A
	br = branch
	cm = commit -m
	co = checkout
	cob = checkout -b
	d = diff
	f = fetch
	l = log --oneline --decorate --graph
	last = log -1 HEAD
	pr = remote prune origin
	pl = pull
	plom = pull origin main
	ps = push
	psom = push origin main
	st = status
	unstage = reset HEAD --

